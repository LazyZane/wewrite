{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "DOM", 
      "ES5",
      "ES6",
      "ES7","esnext", "dom", "dom.iterable", "scripthost", "es2017", "es2018"
    ],
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test",
    "icons",
    "src/assets/css/build-template-css.js",
    "*.mjs"
    
  ]
}
